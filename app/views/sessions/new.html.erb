<% provide(:title, "login") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :email, class: "label-login" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, class: "label-login" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
    <p>
      アカウント作成は<%= link_to "こちら", signup_path %>
    </p>
  </div>
</div>
